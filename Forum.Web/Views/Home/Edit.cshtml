@model Forum.Web.ViewModels.EditTopicViewModel

@{
    ViewBag.Title = "Edit a Thread";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active">@ViewBag.Title</li>
</ul>

<div class="page-wrap container-fluid">

    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="row-fluid">
            <div class="span2">
                <a href="/home/details/@Model.ID">&laquo;&nbsp;Back to Thread Details</a>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="control-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                </div>
                <div class="controls editor-field">
                    @Html.TextBoxFor(model => model.Title, new { @class = "span9" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <div class="editor-label">
                    <label class="control-label" for="SpareField">@Resources.Home.Index.SpareField</label>
                </div>
                <div class="controls editor-field">
                    @Html.TextBoxFor(model => model.SpareField, new { @class = "span2" })
                    @Html.ValidationMessageFor(model => model.SpareField)
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.BugTicketId, new { @class = "control-label" })
                </div>
                <div class="controls editor-field">
                    @Html.TextBoxFor(model => model.BugTicketId, new { @class = "span2", placeholder = "Admin use only" })
                    @Html.ValidationMessageFor(model => model.BugTicketId)
                </div>
            </div>
        </div>        
        <div class="row-fluid">
            <div class="control-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.StatusID, new { @class = "control-label" })
                </div>
                <div class="controls editor-field">
                    @Html.DropDownList("StatusID", (IEnumerable<SelectListItem>)ViewBag.Status)
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span2">
                <label class="control-label fields" for="unitid">Attach a File</label>
            </div>

            <div class="controls span10">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <span class="btn btn-file" title="Only the following files are allowed - .doc(x), .txt, .pdf"><span class="fileupload-new">Select file</span><span class="fileupload-exists">Change</span><input name="DocumentID" type="file" /></span>
                    <span class="fileupload-preview"></span>
                    <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">×</a>
                </div>
                    @Html.ValidationMessageFor(model => model.DocumentID)
            </div>
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                </div>
                <div class="controls editor-field">
                    @Html.TextAreaFor(model => model.Description, new { @class = "span11 richtext" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
        </div>
        <div class="form-actions">
            <div class="pull-right">
                <input type="reset" value="Reset" class="btn-link" />&nbsp;&nbsp;
            <a href="/" class="btn" title="Return to the List">Cancel</a>&nbsp;&nbsp;
            <input type="submit" class="btn btn-primary" value="Save Changes" />
            </div>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/js/jqueryval")

    <script>
        $(function () {

            var totalerrors = $(".input-validation-error").length;
            if (totalerrors == 0) {
                $("#Title").focus();
            } else {
                $(".input-validation-error:first").focus();
            }

            $(".richtext").wysihtml5({
                "font-styles": false,
                "emphasis": true,
                "lists": true,
                "html": false,
                "link": true,
                "color": false,
                "image": false
            });

            $("[title]").tooltip();
        });
    </script>
}
